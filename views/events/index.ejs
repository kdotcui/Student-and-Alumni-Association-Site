<h2>Events Table</h2>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Start Date</th>
      <th>End Date</th>
    </tr>
  </thead>
  <tbody>
    <% events.forEach(event => { %>
    <tr>
      <td>
        <a href="<%= `/events/${event._id}` %>"> <%= event.title %> </a>
      </td>
      <td><%= event.description %></td>
      <td><%= event.location %></td>
      <td><%= event.startDate %></td>
      <td><%= event.endDate %></td>
      <% if (currentUser) { %>
        <td>
          <a href="<%= `/events/${event._id}/attend` %>">
            Attend
          </a>
        </td>
        <% } else { %>
        <td>
          <a href="<%= `/events/${event._id}/notSignedIn` %>">Attend</a>
        </td>
      <% } %>
      <% if (currentUser) { %>
        <td>
          <a href="<%= `/events/${event._id}/edit` %>">Edit</a>
        </td>
      <% } else { %>
        <td>
          <a href="<%= `/events/${event._id}/notSignedIn` %>">Edit</a>
        </td>
      <% } %>
      <% if (currentUser) { %>
        <td>
          <a href="<%= `/events/${event._id}/delete?_method=DELETE` %>"onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
        </td>
      <% } else { %>
        <td>
          <a href="<%= `/events/${event._id}/notSignedIn` %>">Delete</a>
        </td>
      <% } %>

    </tr>
    <% }); %>
  </tbody>
</table>
<div>
  <% if (currentUser) { %>
    <td>
      <a href="/events/new">Create a new event</a>
    </td>
  <% } else { %>
    <td>
      <a href="<%= `/events/notsignedin/notSignedIn` %>">Create a new event</a>
    </td>
  <% } %>
</div>
