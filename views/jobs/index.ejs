<h2>Jobs Table</h2>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Company</th>
      <th>Location</th>
      <th>Contact Phone</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% jobs.forEach(job => { %>
    <tr>
      <td>
        <a href="<%= `/jobs/${job._id}` %>"> <%= job.title %> </a>
      </td>
      <td><%= job.company %></td>
      <td><%= job.location %></td>
      <td><%= job.contactPhone %></td>
      <td><%= job.description %></td>
      <% if (currentUser) { %>
        <td>
          <a href="<%=`/jobs/${job._id}/edit` %>"> Edit </a>
        </td>
        <td>
          <a
            href="<%= `jobs/${job._id}/delete?_method=DELETE` %>"
            onclick="return confirm('Are you sure you want to delete this record?')"
          >Delete</a>
        </td>
      <% } else { %>
        <td>
          <a href="<%= `/jobs/${job._id}/notSignedIn` %>">Edit</a>
        </td>
        <td>
          <a href="<%= `/jobs/${job._id}/notSignedIn` %>">Delete</a>
        </td>
      <% } %>
    </tr>
    <% }); %>
  </tbody>
</table>
<div>
  <% if (currentUser) { %>
    <a href="/jobs/new">Create a new job</a>
  <% } else { %>
    <a href="/jobs/notsignedin/notSignedIn">Create a new job</a>
  <% } %>
</div>

